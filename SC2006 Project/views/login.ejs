<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CarPark Login</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Ensure correct path to your CSS -->
</head>
<body>
    <div class="login-container">
        <div class="login-box">
          <img src="/css/images/logo.jpg" alt="CarPark Logo" class="logo">
      
          <!-- Display error message if login fails -->
          <% if (messages.error) { %>
            <div class="error-message">
              <%= messages.error %>
            </div>
          <% } %>
      
          <!-- Login form -->
          <form action="/login" method="POST" class="login-form">
            <div class="input-group">
              <label for="email">Username / Email</label>
              <input type="email" id="email" name="email" required>
            </div>
      
            <div class="input-group">
              <label for="password">Password</label>
              <input type="password" id="password" name="password" required>
            </div>

            <a href="/forgetPassword" class="btn-forgot">Forgot password?</a>
            
            <div class="button-container">
              <button type="submit" class="btn-login">Sign in</button>
              <a href="/register" class="btn-register">Register</a>
          </div>
          </form>

          <div class="or-container">
            <hr class="line" />
            <span class="or-text">OR</span>
            <hr class="line" />
          </div>
      
          <!-- Other buttons -->
          <a href="/guest" class="btn-guest full-width">Continue as Guest</a>
        </div>
      </div>
      
