<!-- views/forgetPassword.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Link to your stylesheet -->
</head>
<body>
    <h1>Forgot Password</h1>

    <!-- Form for answering the security question -->
    <form action="/forgot-password" method="POST">
        <p>Your security question:</p>
        <strong><%= securityQuestion %></strong> <!-- This will display the user's security question -->

        <label for="securityAnswer">Enter your answer:</label>
        <input type="text" id="securityAnswer" name="securityAnswer" required>

        <button type="submit">Submit Answer</button>
    </form>

    <!-- Option to go back to login -->
    <p>Remembered your password? <a href="/login">Login</a></p>
</body>
</html>
